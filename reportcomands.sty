\newcommand{\newglos}[3]
{%
	% The glossary entry the acronym links to   
	\newglossaryentry{#1-g}{name={#2}, text={#2},
		description={#3}}}

\newcommand{\newglosacr}[4]
{%
	% The glossary entry the acronym links to   
	\newglossaryentry{#1-g}{name={#2}, text={#2},
		description={#3}}
%
	% Define the acronym and use the see= option
	\newglossaryentry{#1}{type=\acronymtype, name={#2}, text={#2},
	description={}, first={#4\glsadd{#1-g}}, see=[Glossaire:]{#1-g}}}

\newcommand{\newglosacrsee}[5]
{%
	% The glossary entry the acronym links to   
	\newglossaryentry{#1-g}{name={#2}, text={#2},
		description={#3}, see={#5}}
%
	% Define the acronym and use the see= option
	\newglossaryentry{#1}{type=\acronymtype, name={#2}, text={#2}, 
		description={}, first={#4\glsadd{#1-g}}, see=[Glossaire:]{#1-g}}}

